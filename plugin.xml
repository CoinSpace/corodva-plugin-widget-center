<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-widget-center" version="0.0.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>WidgetCenter</name>

    <js-module name="YourPluginName" src="www/WidgetCenter.js">
        <clobbers target="WidgetCenter" />
    </js-module>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">

            <feature name="WidgetCenter">
                <param name="ios-package" value="WidgetCenter" />
            </feature>

        </config-file>

        <!-- Add in the plugin .swift files here -->
        <source-file src="src/ios/WidgetCenter.swift" />

        <!-- Add in the swift-support plugin by default -->
        <dependency id="cordova-plugin-add-swift-support" version="1.7.2"/>
    </platform>
</plugin>
